@model YCBusService.Models.BusRoute

@{
    ViewData["Title"] = "Bus Route - Edit";
}

<h2>Bus Route - Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>BusRoute</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="BusRouteCode" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Model.BusRouteCode
                <input type="hidden" asp-for="BusRouteCode" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="RouteName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="RouteName" class="form-control" />
                <span asp-validation-for="RouteName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
